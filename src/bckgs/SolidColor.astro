---
const bckgColor = '#1F1F1F'
const bckgOpacity = 0.9
---

<div
  class='solid-background'
  style=`--bckgColor: ${bckgColor}; --bckgOpacity: ${bckgOpacity};`
>
</div>

<style>
  .solid-background {
    z-index: -50;
    width: 100%;
    height: 100vh;
    position: relative;
    background-color: var(--bckgColor);
    opacity: var(--bckgOpacity);
  }
</style>
