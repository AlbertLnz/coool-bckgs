---
import GithubIcon from '@/assets/GithubIcon.astro'
import SwitcherHideBckgsSvelte from '@/components/SwitcherHideBckgs.svelte'

const title = 'Cooool-bckgs'
---

<header class='flex items-center justify-around w-full'>
  <div>
    <p class='tracking-wide text-lg text-white/90 hover:text-white'>
      Developed by
      <span class='hover:underline text-2xl'>
        <a href='https://albertlnz.dev' target='_blank'>Albert Lanza</a>
      </span>
    </p>
  </div>
  <div class='flex flex-col'>
    <div class='relative flex pb-2'>
      <h1 class='text-8xl z-20'>{title}</h1>
      <h1 class='text-8xl z-10 text-blue-400 blur-sm absolute top-0'>
        {title}
      </h1>
    </div>
    <SwitcherHideBckgsSvelte client:only='svelte' />
  </div>
  <a href='https://github.com/AlbertLnz/coool-bckgs' target='_blank'>
    <GithubIcon class='size-40 text-white/90 hover:text-white' />
  </a>
</header>
